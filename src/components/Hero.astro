---
import mapa from '../assets/Imagenes/mapaColombia.svg';
---

<section class="w-screen h-[100dvh] flex flex-col z-0 pt-16">

    <div class="flex-1 h-2/3  flex items-center justify-center">
        
        <img
            class="w-auto h-full object-contain"
            src={mapa.src}
            alt="Mapa de Colombia"
        />

    </div>
    <article class="h-1/3 flex flex-col items-center justify-center px-4 gap-1">

    <h1 class="text-5xl font-bold text-gray-800 text-center mt-8">Luisa Fernanda Giraldo Murillo</h1>
    <p class="text-lg text-gray-600 text-center mt-4 mb-8">Riógrafa y Educadora artística</p>
    </article>
</section>

   